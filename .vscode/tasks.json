{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "get_cli: get generate locales assets/languages",
      "group": "build",
      "type": "shell",
      "command": "get",
      "args": ["generate", "locales", "assets/languages"]
    },
    {
      "label": "Spider: spider build",
      "group": "build",
      "type": "shell",
      "command": "spider",
      "args": ["build"]
    },
    {
      "label": "Flutter: flutter pub run build_runner build",
      "group": "build",
      "type": "flutter",
      "command": "flutter",
      "args": [
        "pub",
        "run",
        "build_runner",
        "build",
        "--delete-conflicting-outputs"
      ]
    },
    {
      "label": "Flutter: flutter pub get",
      "group": "build",
      "type": "flutter",
      "command": "flutter",
      "args": ["pub", "get"]
    },
    {
      "label": "Build Web",
      "group": "build",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Flutter: flutter build web",
        "Copy build/web to docs"
      ]
    },
    {
      "label": "Flutter: flutter build web",
      "group": "build",
      "type": "flutter",
      "command": "flutter",
      "args": ["build", "web", "-t", "lib/main.dart",]
    },
    {
      "label": "Copy build/web to docs",
      "group": "none",
      "type": "shell",
      "command": "cp",
      "args": ["-a", "build/web/.", "docs",]
    }
  ]
}
